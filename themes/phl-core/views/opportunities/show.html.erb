<% content_for(:page_title, @opportunity.title) %>

<% if !@opportunity.posted? %>
  <%= render('admin_status') %>
<% end %>

<div class='page_header page_header_action'>
  <h2><%= @opportunity.title %></h2>

  <div class='page_header_action_button'>
    <% if @opportunity.posted? %>
      <%= render('subscribe_button') %>
    <% end %>
  </div>
</div>

<div class='grid'>
  <div class='item lap_seven_columns desk_eight_columns'>
    <% if @opportunity.description.present? &&  @opportunity.description != @opportunity.title %>
      <%= render('description') %>
    <% end %>
    <% if @opportunity.original_url? %>
      <div class="opportunity_section">
        <div class="info_box_body">
        <p class="info_disclaimer_text">
          Bids and professional service contracts may require you to register for an account and apply for the opportunity through their respective sites.  Please be sure to refer to the detailed descriptions of the opportunity to learn about specific submission requirements.
        </p>
        </div>
      </div>
    <% end %>
    <%= render('attachments') %>
    <%= render('questions') if @opportunity.enable_questions? %>
  </div>
  <div class='item lap_five_columns desk_four_columns'>
    <%= render('timeline') %>
    <%= render('vendor_actions') %>
    <%= render('admin_links') %>
  </div>
</div>
